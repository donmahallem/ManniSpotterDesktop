{
  "name": "@donmahallem/trapeze-client-electron",
  "version": "1.7.3",
  "description": "An electron app to be used with trapeze endpoints",
  "main": "./dist/main.js",
  "private": false,
  "bin": {
    "trapeze-client": "./bin/trapeze-client"
  },
  "scripts": {
    "test": "mocha",
    "build": "npm run build:pug && npm run build:typescript",
    "watch": "tsc -w",
    "start": "npm run build && electron ./dist/main.js",
    "start:dev": "npm run build && electron ./dist/main.js --dev true",
    "build:pug": "pug src --out ./dist",
    "build:typescript": "tsc",
    "test-ci": "nyc npm run test",
    "lint": "tslint -c tslint.json -p tsconfig.json -e src/**/*.spec.ts src/**/*.ts",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig.json -e src/**/*.spec.ts src/**/*.ts",
    "docs": "typedoc --options typedoc.json",
    "test:lint": "npm run lint",
    "test:build": "npm run build",
    "test:unit": "npm run test-ci",
    "test:docs": "npm run docs",
    "build:asar": "asar pack ./dist ./release/app.asar"
  },
  "files": [
    "dist/*",
    "bin/*"
  ],
  "trapeze-client": "./bin/trapeze-client",
  "engines": {
    "node": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://donmahallem.github.io/TrapezeClientElectron/",
  "author": {
    "name": "donmahallem",
    "email": "donmahallem@users.noreply.github.com",
    "url": "https://github.com/donmahallem"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/donmahallem/TrapezeClientElectron/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donmahallem/TrapezeClientElectron.git"
  },
  "devDependencies": {
    "@types/chai": "~4.2.9",
    "@types/mocha": "~7.0.1",
    "@types/sinon": "~7.5.1",
    "asar": "~2.1.0",
    "chai": "~4.2.0",
    "mocha": "~7.0.1",
    "nyc": "~15.0.0",
    "pug-cli": "~1.0.0-alpha6",
    "ts-node": "~8.6.2",
    "tslint": "~6.0.0",
    "typedoc": "~0.16.10",
    "typescript": "~3.7.5"
  },
  "dependencies": {
    "@donmahallem/trapeze-api-express-route": "~1.8.6",
    "@donmahallem/trapeze-api-types": "~1.7.1",
    "@donmahallem/trapeze-client-ng": "~2.5.0",
    "electron": "~8.0.1",
    "express": "~4.17.1",
    "helmet": "~3.21.2",
    "yargs": "~15.1.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
